description "dev.butyr.org"
author      "Jon Buckley"
 
start on started mountall
stop on shutdown
     
respawn
respawn limit 2 30
     
script
  cd /opt/butter/current/cornfield
  PATH=/opt/node/current/bin:$PATH NODE_CONFIG_DIR=/etc/popcorn NODE_ENV=production node app.js | rotatelogs -l /var/log/butter.log.%Y.%m.%d 86400 2>&1
end script 
