{
  "name": "default-config",
  "baseDir": "../",
  "snapshotHTMLOnReady": true,
  "scrapePage": true,
  "editor": {
    "default": "{{baseDir}}editors/default-editor.html"
  },
  "ui": {
    "enabled": true,
    "trackEventHighlight": "click",
    "title": "Popcorn Maker"
  },
  "mediaDefaults": {
    "frameAnimation": true
  },
  "plugin": {
    "plugins": [
      {
        "type": "attribution",
        "path": "{{baseDir}}external/popcorn-js/plugins/attribution/popcorn.attribution.js"
      },
      {
        "type": "flickr",
        "path": "{{baseDir}}external/popcorn-js/plugins/flickr/popcorn.flickr.js"
      },
      {
        "type": "text",
        "path": "{{baseDir}}external/popcorn-js/plugins/text/popcorn.text.js"
      },
      {
        "type": "googlefeed",
        "path": "{{baseDir}}external/popcorn-js/plugins/googlefeed/popcorn.googlefeed.js"
      },
      {
        "type": "googlemap",
        "path": "{{baseDir}}external/popcorn-js/plugins/googlemap/popcorn.googlemap.js"
      },
      {
        "type": "image",
        "path": "{{baseDir}}external/popcorn-js/plugins/image/popcorn.image.js"
      },
      {
        "type": "lowerthird",
        "path": "{{baseDir}}external/popcorn-js/plugins/lowerthird/popcorn.lowerthird.js"
      },
      {
        "type": "subtitle",
        "path": "{{baseDir}}external/popcorn-js/plugins/subtitle/popcorn.subtitle.js"
      },
      {
        "type": "tumblr",
        "path": "{{baseDir}}external/popcorn-js/plugins/tumblr/popcorn.tumblr.js"
      },
      {
        "type": "twitter",
        "path": "{{baseDir}}external/popcorn-js/plugins/twitter/popcorn.twitter.js"
      },
      {
        "type": "webpage",
        "path": "{{baseDir}}external/popcorn-js/plugins/webpage/popcorn.webpage.js"
      },
      {
        "type": "wikipedia",
        "path": "{{baseDir}}external/popcorn-js/plugins/wikipedia/popcorn.wikipedia.js"
      },
      {
        "type": "wordriver",
        "path": "{{baseDir}}external/popcorn-js/plugins/wordriver/popcorn.wordriver.js"
      }
    ],
    "defaults": [
      "text",
      "image"
    ]
  },
  "dirs": {
    "popcorn-js": "{{baseDir}}external/popcorn-js/",
    "css": "{{baseDir}}css/",
    "dialogs": "{{baseDir}}dialogs/",
    "resources": "{{baseDir}}resources/"
  },
  "icons": {
    "default": "popcorn-icon.png",
    "image": "image-icon.png"
  }
}
