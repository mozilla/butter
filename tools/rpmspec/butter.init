description "Butter"
author      "Mozilla"

start on started mountall
stop on shutdown

respawn
respawn limit 2 30

script
  cd /opt/butter/current
  PATH=/opt/node/current/bin:$PATH NODE_CONFIG_DIR=/etc/popcorn NEW_RELIC_HOME=/etc/popcorn NODE_ENV=production node server.js | rotatelogs -l /var/log/butter.log.%Y.%m.%d 86400 2>&1
end script
